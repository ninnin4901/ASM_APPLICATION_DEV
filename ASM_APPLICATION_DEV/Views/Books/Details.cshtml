@{
}

@model Book


<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Name Book: @Model.NameBook</h3>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@ViewBag.Image" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h2 class="mt-5">
                        @Model.Price VNĐ
                    </h2>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Details Books</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Quantity</td>
                                    <td>@Model.QuantityBook</td>
                                </tr>
                                <tr>
                                    <td>Created At</td>
                                    <td>@Model.CreatedAt</td>
                                </tr>
                                <tr>
                                    <td>Information of Book</td>
                                    <td>@Model.InformationBook</td>
                                </tr>
                                  <tr>
                                    <td>Category</td>
                                    <td>@Model.Category.NameCategory</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>