@using ASM_APPLICATION_DEV.Utils
@using ASM_APPLICATION_DEV.ViewModel
@using Microsoft.AspNetCore.Identity

@model AdminViewModel

@{
    int RowNo = 0;
}

@{
    var message = TempData["Message"];
}

@if (message != null)
{
    <h4 class="alert alert-success" role="alert"> <strong>@TempData["Message"]</strong></h4>
}


<a asp-action="Index" asp-controller="Accounts" asp-route-name="AllUser" class="btn btn-primary">View All User</a>
<a asp-action="Index" asp-controller="Accounts" asp-route-name="customer" class="btn btn-primary">View All Customer</a>
<a asp-action="Index" asp-controller="Accounts" asp-route-name="storeOwner" class="btn btn-primary">View All Store Owner</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">User Email</th>
      <th scope="col">Action</th>
    </tr> 
  </thead>
  <tbody>
    @foreach (var item in Model.Users){
      <tr>
        <th scope="row">@{RowNo++;} @RowNo</th>
        <td>@item.Email</td>
                <td><a asp-action="ChangePassword" asp-controller="Accounts" asp-route-id=@item.Id>Change Password</a></td>
      </tr>
  }
  </tbody>
</table>