@using ASM_APPLICATION_DEV.Utils;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASM_APPLICATION_DEV</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASM_APPLICATION_DEV.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASM_APPLICATION_DEV</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole(Role.STORE_OWNER))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Books" asp-action="ViewAllBook">Book Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Categories" asp-action="Index">Category Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Orders" asp-action="ViewOrdersForStoreOwner">Record Management</a>
                            </li>

                        }
                        @if (User.IsInRole(Role.CUSTOMER))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Views" asp-controller="Books" asp-action="ViewBooksForCustomer">View Book</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="OrderDetails" asp-action="Index">Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Views" asp-controller="Home" asp-action="Help">Help</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Views" asp-controller="Orders" asp-action="Index">Orders</a>
                            </li>
                            

                        }
                        @if (User.IsInRole(Role.STORE_OWNER))
                        {
                            <li class="nav-item">
                            </li>
                        }
                        @if (User.IsInRole(Role.ADMIN))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Views" asp-controller="Categories" asp-action="ManageCategory">Manage Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Views" asp-controller="Accounts" asp-action="Index">Manage Account</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ASM_APPLICATION_DEV - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
